<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Warna latar belakang kotak -->
            <stroke android:width="1dp" android:color="#FF79747E" /> <!-- Warna border dan lebar border -->
            <padding android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp" /> <!-- Padding (opsional) -->
            <corners android:radius="5dp"/>
        </shape>
    </item>
</layer-list>